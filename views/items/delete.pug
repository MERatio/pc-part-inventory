extends ../layout

block content
	main(class='container-fluid')
		div(class='row justify-content-center')
			div(class='col-md-8')
				header
					h1= item.name
				p Do you really want to delete this item?
				form(method='POST' action='' class='mt-3')
					div(class='mb-3')
						input(
							type='hidden' 
							class='form-control' 
							name='itemId' 
							value=item._id
							required 
						)
					button(type='submit' class='btn btn-danger') Delete
