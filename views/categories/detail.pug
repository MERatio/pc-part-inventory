extends ../layout

block content
	main(class='container-fluid')
		div(class='row justify-content-center')
			div(class='col-md-8')
				header
					div(class='d-flex justify-content-between align-items-center')
						h1= category.name
						a(href=`${category.url}/update` class='link-primary') Update
					p= category.description
				if categoryItems.length === 0
					h2(class='text-center') No Items in this category.
				else
					table(class='table')
						thead
							tr
								th(scope='col') Name
								th(scope='col') Price
								th(scope='col') Stock
						tbody
							each categoryItem in categoryItems
								tr
									td
										a(href=categoryItem.url)= categoryItem.name
									td(class='fw-bold')= `$${categoryItem.price}`
									td= categoryItem.stock
